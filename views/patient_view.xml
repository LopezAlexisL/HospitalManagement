<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
<data noupdate="1">

    <record id="patient_view_form" model="ir.ui.view">
        <field name="name">patient.view.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="last_name" />
                        <field name="age" />
                        <field name="gender" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hospital_patient_view_tree" model="ir.ui.view">
        <field name="name">hospital.patient.view.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
                <field name="last_name" />
                <field name="age" />
                <field name="gender" />
            </tree>
        </field>
    </record>

    <record id="patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html" >
            <p>
                No patients loged yet
            </p>
        </field>
    </record>

    <menuitem
        id="patient_submenu"
        name="Patients"
        action="patient_action"
        parent="patient_main_menu"
        sequence="1"/>

</data>


</odoo>